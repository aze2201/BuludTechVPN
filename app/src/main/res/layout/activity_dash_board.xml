<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.DashBoard"
    android:background="@color/colorOffWhite"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>
    <FrameLayout
        android:layout_below="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/prevent_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparentDark"
            android:visibility="gone">
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/loading_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:indicator="LineScalePulseOutRapid"
                app:indicator_color="@color/colorLoading"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/connect_management_layout"
            android:layout_marginLeft="@dimen/margin_fragments_left_right"
            android:layout_marginRight="@dimen/margin_fragments_left_right"
            android:layout_width="match_parent"
            android:elevation="1dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible">
            <FrameLayout
                android:id="@+id/ad_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ad_view_back_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorOffWhite"
                    android:text=""/>
                    <com.google.android.gms.ads.AdView
                        android:id="@+id/ad_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        ads:adSize="BANNER"
                        app:adUnitId="@string/str_ads_unit_id"/>

            </FrameLayout>
            <RelativeLayout
                android:layout_below="@+id/ad_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/connect_management_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/management_height"
                    android:orientation="vertical"
                    android:padding="@dimen/management_info_padding_side"
                    android:layout_margin="@dimen/management_info_margin_side"
                    android:background="@drawable/group_top">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/group_indicator"
                            android:id="@+id/connect_management_status_indicator"/>
                        <TextView
                            android:paddingLeft="20dp"
                            android:textSize="22sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/connect_management_status"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/speed_down"/>
                        <TextView
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/connect_management_speed_down"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/speed_up"/>
                        <TextView
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/connect_management_speed_up"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/vol_down"/>
                        <TextView
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/connect_management_vol_down"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/vol_up"/>
                        <TextView
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/connect_management_vol_up"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <at.markushi.ui.CircleButton
                    android:id="@+id/connect_management_button"
                    android:layout_width="@dimen/management_button_height"
                    android:layout_height="@dimen/management_button_height"
                    android:layout_below="@+id/connect_management_info"
                    android:src="@drawable/ic_pause_white_48dp"
                    app:cb_color="@color/colorAccent"
                    android:layout_centerInParent="true"
                    app:cb_pressedRingWidth="@dimen/management_button_ring"
                    android:elevation="7dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:layout_marginBottom="12dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <ScrollView
            android:paddingLeft="@dimen/margin_fragments_left_right"
            android:paddingRight="@dimen/margin_fragments_left_right"
            android:id="@+id/filter_sort_layout"
            android:visibility="invisible"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="@dimen/filter_top_offset"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:layout_height="300dp"
                android:padding="@dimen/filter_layout_padding">
                <LinearLayout
                    android:id="@+id/filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/filter_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/filter_text_size"
                        android:layout_weight="1"
                        android:textColor="@color/colorOffWhite"
                        android:paddingLeft="16dp"
                        android:text="@string/str_filter_by"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="16dp"
                        android:layout_weight="2">
                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/filter_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/filter_text_size"
                            android:prompt="@string/str_spinner_title"/>
                        <AutoCompleteTextView
                            android:id="@+id/filter_input"
                            android:layout_below="@+id/filter_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOffWhite"
                            android:hint="@string/str_filter_input_hint"
                            android:textColorHint="@color/colorTransparentOffWhile"
                            android:textSize="@dimen/filter_text_size"
                            android:paddingLeft="8dp"
                            android:lines="1"
                            android:inputType="text"
                            android:maxLines="1"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sort_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/sort_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/filter_text_size"
                        android:layout_weight="1"
                        android:textColor="@color/colorOffWhite"
                        android:paddingLeft="16dp"
                        android:text="@string/str_sort_by"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="16dp"
                        android:layout_weight="2">
                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/sort_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/filter_text_size"
                            android:prompt="@string/str_spinner_title"
                            android:layout_alignParentTop="true"/>
                        <RadioGroup
                            android:id="@+id/sort_radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:weightSum="2"
                            android:theme="@style/AppThemeDark"
                            android:layout_below="@+id/sort_spinner">
                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/sort_radio_descending"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/filter_text_size"
                                android:text="@string/str_sort_radio_descending"
                                android:layout_weight="1"/>
                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/sort_radio_ascending"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/filter_text_size"
                                android:text="@string/str_sort_radio_ascending"
                                android:layout_weight="1"/>
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/filter_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/ButtonStyle"
                            android:text="@string/str_filter_button_text"
                            android:textSize="@dimen/filter_text_size"
                            android:elevation="6dp"
                            android:layout_marginRight="6dp"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/reset_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/ButtonStyle"
                            android:text="@string/str_reset_button_text"
                            android:textSize="@dimen/filter_text_size"
                            android:elevation="6dp"
                            android:layout_marginLeft="6dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:paddingLeft="@dimen/margin_fragments_left_right"
            android:paddingRight="@dimen/margin_fragments_left_right"
            android:id="@+id/filter_sort_app_layout"
            android:visibility="invisible"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="@dimen/filter_top_offset"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:layout_height="200dp"
                android:padding="@dimen/filter_layout_padding">
                <LinearLayout
                    android:id="@+id/filter_app_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="16dp"
                        android:layout_weight="1">
                        <AutoCompleteTextView
                            android:id="@+id/filter_app_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOffWhite"
                            android:hint="@string/str_filter_input_hint"
                            android:textColorHint="@color/colorTransparentOffWhile"
                            android:textSize="@dimen/filter_text_size"
                            android:lines="1"
                            android:inputType="text"
                            android:maxLines="1"/>
                    </RelativeLayout>
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/filter_app_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ButtonStyle"
                        android:text="@string/str_filter_button_text"
                        android:textSize="@dimen/filter_text_size"
                        android:elevation="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
